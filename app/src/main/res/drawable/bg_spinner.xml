<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <layer-list>

            <item>
                <shape>

                    <corners android:radius="@dimen/default_corners" />
                    <solid android:color="@android:color/white" />
                    <padding
                        android:top="@dimen/default_padding" android:bottom="@dimen/default_padding"
                        android:left="@dimen/default_padding" android:right="@dimen/default_padding" />
                    <stroke android:width="@dimen/default_stroke" android:color="@color/colorOpacityGray" />


                </shape>
            </item>

            <item>
                <bitmap
                    android:gravity="end|center_vertical"
                    android:src="@android:drawable/arrow_down_float" />
            </item>

        </layer-list>
    </item>

</selector>